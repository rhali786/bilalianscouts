<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scouts.BilalianScouts" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bilalian Scouts</name>
    <description>
        An Application to help the Bilalian Community stay in touch, know what adventures are coming, and get resources for training. Other uses include links to pertent sites as well as links to merit badge requirements. 
    </description>
    <author email="rhali786@gmail.com" href="http://mrrasheedali.com">
        Rasheed H. Ali
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="/res/icon/android/icon-72-hdpi.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="phonegap-plugin-mobile-accessibility" spec="~1.0.5-dev" />
    <engine name="browser" spec="^5.0.1" />
    <engine name="android" spec="^6.3.0" />
</widget>
